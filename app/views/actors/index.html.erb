

<hr>
<div class="container">
  <div class="d-flex flex-wrap justify-content-between">
<% @actors.each do |actor| %>
  <div class="card bg-light mt-3 mr-2 movie-card">
    <% if actor.image.present? %>
      <%= link_to image_tag(actor.image, class: "card-img-top"), actor %>
    <% end %>
    <h6 class="card-text"><%= actor.name %></h6>
  </div>
<% end %>

  </div>
</div>
