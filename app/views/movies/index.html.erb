
<%= render :partial => 'search' %>


<div class="container">
  <div class="d-flex flex-wrap justify-content-between">
    <% @movies.each do |movie| %>
      <div class="card bg-light mt-3 mr-2 movie-card">

        <% if movie.image.present? %>
          <%= link_to image_tag(movie.image, class: "card-img-top"), movie  %>
        <% end %>
        <h6 class="card-text"><%= movie.title %></h6>

      </div>
    <% end %>
  </div>

</div>
