<div class="container ">
  <div class=" d-flex flex-row justify-content-center">
  <div class="card col-5 login-form justify-content-center">
    <h3>Log In</h3>

    <h2><%= flash[:error] %></h2>

    <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

      <%= submit_tag "Log in", class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
</div>
</div>
