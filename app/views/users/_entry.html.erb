<div class="container  d-flex flex-row justify-content-center">
  <div class="card col-5 centered-form">
    <h1><%= @user.email %></h1>
      <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label 'admin', 'Admin' %>
      <%= f.select :admin, [['True', true], ['False', false]] %>
    </div>
    <div class="form-group">
      <%= f.label  "moderator", "Moderator" %>
      <%= f.select :moderator, [['True', true], ['False', false]] %>
    </div>

      <%= f.submit 'Update', :class => "btn btn-outline-dark" %>
      <% end %>

    </div>
</div>
